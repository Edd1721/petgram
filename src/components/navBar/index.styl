.NavBar
  display flex
  align-items center
  justify-content space-around
  background #fcfcfc
  border-top 1px solid #e0e0e0
  bottom 0
  height 50px
  left 0
  margin 0 auto
  max-width 500px
  position fixed
  right 0
  z-index 1000
  &-link
    display flex
    align-items center
    justify-content center
    text-decoration none
    height 100%
    width 100%
    color #888
    &[aria-current]
      color #000